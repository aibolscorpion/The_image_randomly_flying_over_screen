        android:title="Screensaver" />
    <CheckBoxPreference android:key="images" android:summary="Enable images clickable"
        android:title="Images" />
    <CheckBoxPreference android:key="viewsTotal" android:summary="show viewsTotal in statusbar"
        android:title="ViewsTotal" />
